<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:id="@+id/idTextViewTarjetaUsuario"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:text="2"
            android:gravity="center|center_vertical"
            android:id="@+id/nombreTextViewTarjetaUsuario"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:text="3"
            android:gravity="center"
            android:id="@+id/fechaTextViewTarjetaUsuario"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:src="@drawable/editar"
            android:id="@+id/editarImageViewTarjetaUsuario"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:src="@drawable/borrar"
            android:id="@+id/borrarImageViewTarjetaUsuario"/>



    </LinearLayout>

</android.support.v7.widget.CardView>